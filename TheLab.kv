<WidgetExample>:
    cols: 3
    ToggleButton:
        text:"OFF"
        on_state: root.toggle(self)
        size_hint: None, 1
        width: '100dp'
    Button:
        text:"click here"
        on_press: root.click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: 'fonts/Lcd.ttf'
        font_size: "80dp"
        color: 1,.5,1,1
    
    Switch:
        id: my_switch
        on_active: root.my_switch2(self)
        size_hint: None, 1
        width: '100dp'
        active: True
    Slider:
        min: 0
        max: 100
        value: 50
        disabled: not my_switch.active
        on_value: root.on_slide(self)
        orientation:'vertical'
    BoxLayout:
        orientation:"vertical"
        Label:
            text: root.slider_val_txt
            font_name:'fonts/Lcd.ttf'
            font_size: '20dp'
            color: .5,.5,.5,1
        ProgressBar:
            max : 100
            value :  int(root.slider_val_txt)
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: '100dp'
        text:'enter'
    Label:
        text: my_text_input.text

